package classe.desafios;

public class Data {
	int dia;
	int mes;
	int ano;
	
	Data() {
		dia = 1;
		mes = 1;
		ano = 1970;
	}
	
	Data(int diaRecebido, int mesRecebido, int anoRecebido) {
		dia = diaRecebido;
		mes = mesRecebido;
		ano = anoRecebido;
	}
	
	String obterDataFormatada() {
		return String.format("%d/%d/%d", dia, mes, ano);
	}
}
