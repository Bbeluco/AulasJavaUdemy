package arrays;

public class Exercicio {
	public static void main(String[] args) {
		double[] notasAlunoA = new double[3];
		notasAlunoA[0] = 7.8;
		notasAlunoA[1] = 5.3;
		notasAlunoA[2] = 7.7;
		
		double total = 0;
		
		for (int i = 0; i < notasAlunoA.length; i++) {
			total+=notasAlunoA[i];
		}
		
		System.out.println("A media do alunoA Ã© " + total / notasAlunoA.length);
		
	}
}
