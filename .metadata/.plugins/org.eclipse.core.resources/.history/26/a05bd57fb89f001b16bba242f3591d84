package fundamentos;

import java.util.Scanner;

public class DesafioConversao {
	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		
		System.out.print("Digite o seu 1º salário: ");
		String n1Str = entrada.nextLine(); 
		System.out.print("Digite o seu 2º salário: ");
		String n2Str = entrada.nextLine();
		System.out.print("Digite o seu 3º salário: ");
		String n3Str = entrada.nextLine();
		
		System.out.println(Float.parseFloat(n1Str.replace(",", ".")));
	}
}
